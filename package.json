{
  "name": "@uptechworks/appfit-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npx lerna run build --stream",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:dry": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "package": "npm run build && npm pack",
    "prettier": "npx prettier . --write",
    "deploy:publish": "npx lerna publish from-package --yes",
    "deploy:version": "npx lerna version",
    "test": "jest --no-cache",
    "test:cov": "jest --coverage --no-cache",
    "display-version": "echo $npm_package_version"
  },
  "author": "UpTech Works, LLC",
  "license": "MIT",
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "parcel": "^2.12.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
